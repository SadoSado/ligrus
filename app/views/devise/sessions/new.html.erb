<div class="flex items-center justify-center min-h-screen bg-gray-100">
  <div class="px-8 py-6 mt-4 text-left bg-white shadow-lg">
      <h3 class="text-2xl font-bold text-center">Login to your account</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mt-4">
          <%= f.label :email, class: "block" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" %>
        </div>

        <div class="mt-4">
          <%= f.label :password, class: "block" %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 mt-2 border rounded-md focus:outline-none focus:ring-1 focus:ring-blue-600" %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="mt-4">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="flex items-baseline justify-between">
          <%= f.submit "Log in" , class: "px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg hover:bg-blue-900" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
  </div>
</div>
